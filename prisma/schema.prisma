generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String       @id
  alias      String
  username   String       @unique
  password   String
  createdAt  DateTime     @default(now())
  posts      Posts[]
  comments   Comments[]
  friends    Friends[]
  Messages   Messages[]
  GroupChats GroupChats[]
  Sessions   Sessions[]
}

model Sessions {
  id        String   @id
  token     String
  createdAt DateTime @default(now())
  user      Users    @relation(fields: [userId], references: [id])
  userId    String
}

model Friends {
  id     String  @id
  user   Users   @relation(fields: [userId], references: [id])
  userId String
  mute   Boolean
}

model Posts {
  id        String     @id
  title     String
  content   String
  createdAt DateTime   @default(now())
  author    Users      @relation(fields: [authorId], references: [id])
  authorId  String
  likes     Int
  dislikes  Int
  comments  Comments[]
}

model Comments {
  id        String   @id
  content   String
  createdAt DateTime @default(now())
  author    Users    @relation(fields: [authorId], references: [id])
  authorId  String
  post      Posts    @relation(fields: [postId], references: [id])
  postId    String
}

model Messages {
  id           String     @id
  content      String
  createdAt    DateTime   @default(now())
  author       Users      @relation(fields: [authorId], references: [id])
  authorId     String
  GroupChats   GroupChats @relation(fields: [groupChatsId], references: [id])
  groupChatsId String
}

model GroupChats {
  id       String     @id
  name     String
  members  Users[]
  messages Messages[]
}
